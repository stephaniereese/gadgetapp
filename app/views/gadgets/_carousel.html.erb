<div id="slider">
  <div class="slick-carousel">
    <% @images.each do |i| %>
      <div>
        <a>
        <% if @images.count < 6 %>
          <img src="<%= root_url + "system/images/photos/000/000/0" + i.id.to_s + "/large/" + i.photo_file_name %>" />
        <% else %>
          <img data-lazy="<%= root_url + "system/images/photos/000/000/0" + i.id.to_s + "/large/" + i.photo_file_name %>" />
        <% end %>
        </a>
      </div>
    <% end %>
  </div>
</div>

<script>
  $('.slick-carousel').slick({
    lazyLoad: 'ondemand',
    slidesToShow: 6,
    slidesToScroll: 6,
    infinite: true
  });
</script>
